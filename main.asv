%%% Main %%%

close all
clf;

global dx 

%% Constantes
Rint=1;
Rext=2;
Qint=4;
Qpi=;
Qext=;
dx=0.1;
N=;dx=(Rint-Rext)/(N-1);
M=51;
x=0:dx:Lx;

%% Système matriciel

A=zeros(N); B=zeros(N,1);
for i=2:N-1
    A(i,i)=-((x(i)+dx/2)+(x(i)-dx/2))/dx^2;
    A(i,i-1)=(x(i)-dx/2)/dx^2;
    A(i,i+1)=(x(i)+dx/2)/dx^2;
    B(i)=0;
end
A(1,1)=1;B(1)=Qint;
A(N,N)=1;B(N)=4;
T=A\B;
plot(x,T,'b.')
hold on;


